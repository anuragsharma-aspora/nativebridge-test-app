{
  "name": "NativeBridge",
  "version": "1.1.0",
  "private": true,
  "description": "Production Android testing application with mandatory biometric authentication gate",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
